{
    "configuration": {
      "name": "Simple",
      "player count": {"min": 1, "max": 4},
      "audience": false,
      "setup": {
        "Rounds": 10
      }
    },
  
    "constants": {
      "weapons": [
        { "name": "Rock",     "beats": "Scissors"},
        { "name": "Paper",    "beats": "Rock"},
        { "name": "Scissors", "beats": "Paper"}
      ]
    },
  
    "variables": {
      "winners": [
        { "name": "a"},
        { "name": "b"},
        { "name" : "c"}
      ]
    },
  
    "per-player": {
      "wins": 0,
      "lose": 2,
      "weapon": "empty"
    },
  
    "per-audience": {},
  
    "rules": [

      { "rule": "foreach",
        "list": "players",
        "element": "player",
        "rules": [
          {
            "rule": "input-text",
            "to": "player",
            "prompt": "{player.name}, type your message",
            "result": "player.weapon"
          }
        
        ]
      } 
    ]
}