{
    "configuration": {
      "name": "Simple",
      "player count": {"min": 1, "max": 4},
      "audience": false,
      "setup": {
        "Rounds": 10
      }
    },
  
    "constants": {
      "weapons": [
        { "name": "Rock",     "beats": "Scissors"},
        { "name": "Paper",    "beats": "Rock"},
        { "name": "Scissors", "beats": "Paper"}
      ]
    },
  
    "variables": {
      "winners": []
    },
  
    "per-player": {
      "wins": 0,
      "lose": 2
    },
  
    "per-audience": {},
  
    "rules": [
            { "rule": "input-choice",
              "to": "player",
              "prompt": "{player.name}, choose your weapon!",
              "choices": "weapons.name",
              "result": "player.weapon",
              "timeout": 10
            }, 

            {
              "rule": "message",
              "to": "player",
              "value": "Gread job, {player.name}!"
            }
     
        
      
    ]
}